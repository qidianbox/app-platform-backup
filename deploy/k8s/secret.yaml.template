apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: app-platform
type: Opaque
stringData:
  # 数据库配置（部署时替换）
  DB_HOST: "${RDS_HOST}"
  DB_PORT: "3306"
  DB_USER: "app_platform"
  DB_PASSWORD: "${RDS_PASSWORD}"
  DB_NAME: "app_platform"
  
  # JWT密钥（部署时替换）
  JWT_SECRET: "${JWT_SECRET}"
  
  # 管理员初始密码
  ADMIN_PASSWORD: "${ADMIN_PASSWORD}"
